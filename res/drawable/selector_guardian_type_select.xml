            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16.0dip" />
                    <solid android:color="#ffffc7e0" />
                </shape>
            </item>
            <item android:left="1.0dip" android:top="1.0dip" android:right="1.0dip" android:bottom="1.0dip">
